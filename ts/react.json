{
  "$schema": "https://json.schemastore.org/tsconfig",

  "extends": "./base.json",

  "display": "React >=v18",

  "compilerOptions": {
    // --- Modules
    "module": "ESNext",
    "moduleResolution": "Bundler",

    // --- Emit
    "noEmit": true,
    "sourceMap": false,

    // --- Interop Constraints
    "allowSyntheticDefaultImports": true,

    // --- Language & Environment
    "jsx": "preserve",
    "lib": ["ESNext", "DOM", "DOM.Iterable"]
  }
}
